{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>taiga-family/renovate-config"],
    "packageRules": [
        {
            "enabled": true,
            "matchDepTypes": ["peerDependencies", "optionalDependencies"]
        },
        {
            "matchDepTypes": ["dependencies", "peerDependencies", "optionalDependencies"],
            "semanticCommitType": "fix"
        },
        {
            "enabled": true,
            "matchUpdateTypes": ["major"]
        },
        {
            "matchPackageNames": ["@types/jest", "jest", "jest-preset-angular", "ts-jest"],
            "matchUpdateTypes": ["major"],
            "enabled": false
        }
    ]
}
